<trackerinfo
	type="norbits"
	shortName="NorBits"
	longName="NorBits"
	siteName="norbits.net">

	<settings>
		<description text="Paste any NorBits torrent download link."/>
		<passkey tooltiptext="The passkey from your NorBits download link."/>
	</settings>

	<servers>
		<server
			network="NB-IRC"
			serverNames="irc.norbits.net"
			channelNames="#Norbits"
			announcerNames="NB"
			/>
	</servers>

	<parseinfo>
		<linepatterns>
			<extract>
				<regex value="Ny torrent: (.*) :: Kategori: (.*) :: Scene: (.*) :: St[&#248;]rrelse: (.*) :: https?\:\/\/([^\/]+\/).*[\?]id=(\d+)"/>
				<vars>
					<var name="torrentName"/>
					<var name="category"/>
					<var name="$scene"/>
					<var name="$torrentSize"/>
					<var name="$baseUrl"/>
					<var name="$torrentId"/>
				</vars>
			</extract>
		</linepatterns>
		<linematched>
			<var name="scene">
				<string value="false"/>
			</var>

			<setregex srcvar="$scene" regex="Ja" varName="scene" newValue="true"/>

			<var name="torrentUrl">
				<string value="http://"/>
				<var name="$baseUrl"/>
				<string value="download.php?id="/>
				<var name="$torrentId"/>
				<string value="&amp;passkey="/>
				<var name="passkey"/>
			</var>
			<var name="torrentSslUrl">
				<string value="https://"/>
				<var name="$baseUrl"/>
				<string value="download.php?id="/>
				<var name="$torrentId"/>
				<string value="&amp;passkey="/>
				<var name="passkey"/>
			</var>
		</linematched>
		<ignore>
			<regex value="^Ny torrent:" expected="false"/>
		</ignore>
	</parseinfo>
</trackerinfo>
