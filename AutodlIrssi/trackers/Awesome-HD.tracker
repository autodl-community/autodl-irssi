<trackerinfo
	type="ahd"
	shortName="AHD"
	longName="Awesome-HD"
	siteName="awesome-hd.me">

	<settings>
		<gazelle_description/>
		<gazelle_authkey/>
		<gazelle_torrent_pass/>
	</settings>

	<servers>
		<server
			network="AHDIRCNet"
			serverNames="irc.awesome-hd.me"
			channelNames="#ahd-announce"
			announcerNames="AHDBot"
			/>
	</servers>

	<parseinfo>
		<linepatterns>
			<extract>
				<!--MOVIE: The Hobbit: An Unexpected Journey [2012] - HiFi / Blu-Ray / 1080p / mkv / h.264 Remux / DTSHD-MA / AHD Gold / DXVA / 75% Freeleech - https://awesome-hd.me/torrents.php?id=7892 / https://awesome-hd.me/torrents.php?action=download&id=13462 -->
				<!--TV-SHOW: Homeland [2011] - WiKi / Blu-Ray / 720p / mkv / x264 / DTS / AHD Gold / 0% Freeleech - https://awesome-hd.me/torrents.php?id=7905 / https://awesome-hd.me/torrents.php?action=download&id=13459-->
				<!--AUDIO-TRACK: Indiana Jones and the Last Crusade [1989] - D-Z0N3 /  / DTS / DTS / DTS / 75% Freeleech - https://awesome-hd.me/torrents.php?id=6978 / https://awesome-hd.me/torrents.php?action=download&id=11479-->
				<regex value="(.*?): (.*?) / (.*) - https?://.* / (https?://.*id=\d+)"/>
				<vars>
					<var name="category"/>
					<var name="torrentName"/>
					<var name="$releaseTags"/>
					<var name="$baseUrl"/>
				</vars>
			</extract>
		</linepatterns>
		<linematched>
			<varreplace name="tags" srcvar="$releaseTags" regex="[\/]" replace=","/>

			<extract srcvar="$releaseTags" optional="true">
				<regex value="(\d+)% Freeleech"/>
				<vars>
					<var name="freeleechPercent"/>
				</vars>
			</extract>

			<extracttags srcvar="$releaseTags" split="/">
				<setvarif varName="resolution" regex="^(?:720p|1080p|1080i|2160p)$"/>
				<setvarif varName="source" regex="^(?:HDTV|UHD Blu\-ray|BluRay|Blu\-Ray|WEB\-DL|WEB|HDDVD|HD\-DVD)$"/>
				<setvarif varName="encoder" regex="^(?:h\.264 Remux|VC\-1 Remux|h\.265 Remux|Remux|h\.264|x264|x265|mpeg2|VC\-1)$"/>

				<!--Ignored-->
				<regex value=""/>
			</extracttags>

			<extract srcvar="torrentName" optional="true">
				<regex value="(.*) \[(\d+)\] -(.*)"/>
				<vars>
					<var name="name1"/>
					<var name="year"/>
					<var name="releaseGroup"/>
				</vars>
			</extract>

			<var name="torrentUrl">
				<var name="$baseUrl"/>
				<string value="&amp;authkey="/>
				<var name="authkey"/>
				<string value="&amp;torrent_pass="/>
				<var name="torrent_pass"/>
			</var>
		</linematched>
		<ignore>
			<regex value="action=download&amp;id=" expected="false"/>
		</ignore>
	</parseinfo>
</trackerinfo>
